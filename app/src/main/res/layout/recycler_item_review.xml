<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="@dimen/block_margin"
    android:layout_marginStart="@dimen/main_margin"
    android:layout_marginEnd="@dimen/main_margin"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/block_margin"
        android:layout_marginEnd="@dimen/block_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/block_margin"
            android:textStyle="bold"
            tools:text="Smog" />

        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/block_margin"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="A River Ain't Too Much to Love" />

    </LinearLayout>
</android.support.v7.widget.CardView>